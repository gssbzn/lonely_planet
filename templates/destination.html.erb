<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Lonely Planet</title>
    <link href="static/all.css" media="screen" rel="stylesheet" type="text/css">
  </head>

  <body>
    <div id="container">
      <div id="header">
        <div id="logo"></div>
        <h1>Lonely Planet: <%= @destination.title %></h1>
      </div>

      <div id="wrapper">
        <%= render(LonelyPlanet.templates + '/sidebar.html.erb') %>
        <div id="main">
          <div class="block">
            <%= render(LonelyPlanet.templates + '/navigation.html.erb') %>
            <% if @destination.history? %>
              <%= render(LonelyPlanet.templates + '/content.html.erb',
                         { title: 'History', content: @destination.history }) %>
            <% end %>
            <% if @destination.introduction? %>
              <%= render(LonelyPlanet.templates + '/content.html.erb',
                         { title: 'Introduction', content: @destination.introduction }) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
